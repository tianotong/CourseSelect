<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">课表查看</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover" style="table-layout:fixed">
            <thead>
            <tr>
              <th></th>
              <th>周一</th>
              <th>周二</th>
              <th>周三</th>
              <th>周四</th>
              <th>周五</th>
              <th>周六</th>
              <th>周日</th>
            </tr>
            </thead>
            <tbody>
            <% @course_time_list.each do |time_key| %>
              <tr>
                <td>第<%= time_key %>节</td>
                <% @weekday_list.each do |week_key| %>
                  <% if @table_course[week_key][time_key].nil? %>
                    <td></td>
                  <% elsif @table_course[week_key][time_key][:start] == time_key
                       course = @table_course[week_key][time_key] %>
                    <td rowspan="<%= course[:span] %>>">
                      <%= course[:name] + ' [' + course[:course_time] + '] [' + course[:course_week] + '] [' + course[:class_room] + ']' %>
                    </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>