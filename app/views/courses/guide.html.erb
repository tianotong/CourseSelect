<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">学分提示</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>选课类型</th>
              <th>已选学分</th>
              <th>所需学分</th>
            </tr>
            </thead>
            <tbody>
            <% @credits.each do |credit| %>
              <tr>
                <td><%= credit[:type] %> </td>
                <td><%= credit[:get] %> </td>
                <td><%= credit[:require] %> </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>